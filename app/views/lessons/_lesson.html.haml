.card
	.card-header
		= link_to lesson.title, lesson, class: "btn btn-link" 
    - if policy(lesson).show?      
		.card-body
			= lesson.content
			= lesson.course
    - if policy(lesson).edit?      
		.card-footer
			= link_to 'edit', edit_lesson_path(lesson), class: "btn btn-primary"
			= link_to 'destroy', lesson, method: :delete, data: { confirm: 'are you sure?' }, class: "btn btn-danger"

%p
